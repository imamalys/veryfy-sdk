<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.HomeFragment">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/document_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EDEDED"
                    android:id="@+id/ll_layout"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/capture_front"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="20dp"
                        android:text="Image Preview"
                        android:background="@drawable/bg_image_preview" />
                    <Button
                        android:id="@+id/btn_front"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_button_blue_background"
                        android:includeFontPadding="false"
                        android:text="@string/capture_id_front"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/capture_front_flash"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:text="Image Preview"
                        android:background="@drawable/bg_image_preview" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_attention"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="20dp"
                        android:visibility="gone"
                        android:background="#4AFF9800"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="#FF5722"
                            android:layout_marginTop="1dp"/>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attention"
                                android:textColor="#FF5722"
                                android:layout_marginStart="15dp"
                                android:textSize="22sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="You are required to take the front image of this document ID type with the camera flash on."
                                android:textColor="#FF5722"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="15dp"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_front_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_button_blue_background"
                        android:includeFontPadding="false"
                        android:visibility="gone"
                        android:text="Capture ID Front (Flash On)"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/capture_back"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_image_preview" />
                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_button_blue_background"
                        android:includeFontPadding="false"
                        android:text="@string/capture_id_back"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>